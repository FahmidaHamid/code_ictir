def maxSimilarity(list1):

    allSyns = dict()
    for word in list1:
       print(word)
       allSyns[word] =  wn.synsets(word)[0]
       print(allSyns[word])
       #input()
    
    #allSyns2 = deepcopy(allSyns1)

    simWordDict = dict()
    pairList = [pair for pair in combinations(allSyns.keys(), 2)]
    print(pairList)
    
    for p in pairList:
        s1 = allSyns[p[0]]
        s2 = allSyns[p[1]] 
        z = wn.wup_similarity(s1, s2) 
        if not z:
